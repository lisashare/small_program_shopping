page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar {
  flex: none;
  display: flex;
  background: #ffffff;
}
.navbar .nav {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.navbar .nav.active {
  color: #f0145a;
}
.navbar .nav.active:after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 6rpx;
  background: #f0145a;
}
swiper {
  height: 300rpx;
}
swiper swiper-item {
  width: 100%;
}
swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.nav-classify {
  display: flex;
}
.nav-classify .nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.nav-classify .nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
}
.nav-classify .nav-item text {
  padding-top: 20rpx;
  font-size: 26rpx;
}
.separate {
  height: 15rpx;
  background-color: #f2f2f2;
}
.category-title {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}
.category-title .name {
  font-size: 40rpx;
  margin: 10rpx auto;
  text-align: center;
}
.category-title .line-flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.category-title .head-img {
  width: 100%;
  height: 270rpx;
}
text {
  color: #444;
  font-size: 32rpx;
}
p {
  color: red;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.goods {
  display: flex;
}
.goods .goods-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 320rpx;
  padding: 20rpx;
}
.goods .goods-item image {
  width: 320rpx;
  height: 340rpx;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.category {
  display: flex;
  flex-direction: column;
}
.category .goods-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.products-items {
  margin-top: 10rpx;
}
.products-items image {
  width: 100%;
  height: 300rpx;
}
