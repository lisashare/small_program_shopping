/* pages/detail/detail.wxss */
swiper {
  height: 500rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.describe {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  font-size: 40rpx;
}
.describe .title {
  margin: 10rpx;
  color: #000;
}
.describe .price {
  color: red;
  margin: 10rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.image-detail {
  width: 100%;
}
.detail-nav {
  display: flex;
  align-items: center;
  background: #fff;
  position: fixed;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 1;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.detail-nav .button-green {
  background-color: #4caf50;
}
.detail-nav .button-red {
  background-color: #f44336;
}
.detail-nav button {
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
/* 占位 */
.temp {
  height: 100rpx;
}
.line-nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
