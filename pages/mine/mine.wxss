/* pages/mine/mine.wxss */
.userInfo {
  display: flex;
  flex-flow: column;
  align-items: center;
  background: #f0145a;
  width: 100%;
  height: 280rpx;
}
.userInfo .userInfo-avator {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.userInfo .userInfo-nickname {
  color: #fff;
}
.order {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #333;
  font-size: 30rpx;
}
.order .myorder-text {
  margin-left: 20rpx;
  width: 40%;
}
.order .myorderlook-text {
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.order .next-image {
  width: 25rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
}
.navs .nav-item {
  width: 25%;
  display: flex;
  flex-flow: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.navs .nav-item .nav-image {
  width: 50rpx;
  height: 50rpx;
}
.navs .nav-item text {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: gray;
}
.line_01 {
  width: 100%;
  height: 2rpx;
  background-color: gainsboro;
}
.person-list {
  display: flex;
  flex-direction: column;
}
.person-list .list-item {
  display: flex;
  align-items: center;
  height: 80rpx;
}
.person-list .list-item .item-image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 20rpx 0 20rpx;
}
.person-list .list-item .item-text {
  color: gray;
  font-size: 30rpx;
  margin-left: 15rpx;
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}
