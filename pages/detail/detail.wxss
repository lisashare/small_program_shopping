/* pages/detail/detail.wxss */
/* pages/detail/template/quantity.wxss */
/* sku选择 */
.dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}
.dialog__container {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}
.dialog--show .dialog__container {
  transform: translateY(0);
}
.dialog--show .dialog__mask {
  display: block;
}
.image-sku {
  width: 200rpx;
  height: 200rpx;
  z-index: 12;
  position: absolute;
  left: 20px;
  top: -30px;
  border-radius: 20rpx;
}
.image-close {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  right: 10rpx;
  top: 10rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  align-items: center;
}
.border-line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 30rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.sku-title {
  position: relative;
  left: 300rpx;
  margin: 1rpx;
}
.sku-price {
  color: red;
  position: relative;
  left: 300rpx;
  margin: 1rpx;
}
.quantity-position {
  position: absolute;
  right: 30rpx;
  display: flex;
}
.add,
.reduce,
.num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 50rpx;
  background: #fff;
  border: 2rpx solid #333;
}
.num {
  border-left: 0;
  border-right: 0;
}
swiper {
  height: 500rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.describe {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  font-size: 40rpx;
}
.describe .title {
  margin: 10rpx;
  color: #000;
}
.describe .price {
  color: red;
  margin: 10rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.image-detail {
  width: 100%;
}
.detail-nav {
  display: flex;
  align-items: center;
  background: #fff;
  position: fixed;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 1;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
/* 占位 */
.temp {
  height: 100rpx;
}
.line-nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
.button-green {
  background-color: #4caf50;
}
.button-red {
  background-color: #f44336;
}
button {
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
