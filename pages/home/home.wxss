page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar {
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .nav {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.navbar .nav.active {
  color: #f0145a;
}
.navbar .nav.active:after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 6rpx;
  background: #f0145a;
}
swiper {
  height: 300rpx;
}
swiper swiper-item {
  width: 100%;
}
swiper swiper-item image {
  width: 100%;
  height: 100%;
}
